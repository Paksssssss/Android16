<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_income"
            android:id="@+id/btn_income" android:layout_marginLeft="40dp"
            android:layout_marginTop="42dp"
            android:onClick="AddIncome" android:layout_alignParentTop="true" android:layout_toStartOf="@+id/btn_recurring"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_expense"
            android:id="@+id/btn_expense"
            android:layout_marginRight="40dp" android:layout_alignTop="@+id/btn_recurring"
            android:layout_toEndOf="@+id/btn_recurring"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView_transac" android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp" android:layout_marginBottom="20dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recurring"
            android:id="@+id/btn_recurring"
            android:layout_alignTop="@+id/btn_income" android:layout_centerHorizontal="true"/>
</RelativeLayout>

